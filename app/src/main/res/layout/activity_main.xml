<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.lun.uitester.MainActivity">

    <Switch
        android:id="@+id/switch_hide_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switch_hide_all"
        android:textSize="@dimen/regular_text"/>


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/normal_text_size"
        android:text="@string/text"
        android:textSize="36sp" />

    <CheckBox
        android:id="@+id/check_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCheck"
        android:padding="16dp"
        android:text="@string/check_big"
        android:textSize="@dimen/regular_text"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioCheck"
            android:padding="16dp"
            android:text="@string/radio_bold"
            android:textSize="@dimen/regular_text" />

        <RadioButton
            android:id="@+id/italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioCheck"
            android:padding="16dp"
            android:text="@string/radio_italic"
            android:textSize="@dimen/regular_text" />

        <RadioButton
            android:id="@+id/bold_italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioCheck"
            android:padding="16dp"
            android:text="@string/radio_bold_italic"
            android:textSize="@dimen/regular_text" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="onButtonCLick"
        android:text="@string/btn_next" />


</LinearLayout>
